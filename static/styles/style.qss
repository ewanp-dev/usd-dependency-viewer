QLineEdit
{
    background-color: @bg-dark-1;
    border: 1px solid @bg-light-1;
    color: @fg-main;
    padding: 4px;
    border-radius: 8px;
}

QTableWidget {
    background: transparent;
    color: @fg-main;
}

QTableWidget::item:hover {
    color: rgb(210, 210, 210);
}

QTableWidget::item:focus {
    background-color: @bg-light-1;
}

QTableWidget::item {
    border-right: 1px solid @bg-light-1;
    padding-left: 6px;
    padding-right: 6px;
}

.WindowHeader {
    background-color: @bg-light-1;
}

QTableWidgetItem {
    color: red;
}

QHeaderView::section {
    background-color: @bg-light-1;
    color: rgb(210, 210, 210);
    border: none;
    padding-left: 6px;
    padding-right: 4px;
}

.DependenciesTree
{
    background-color: @bg-light-1;
}

.SearchWidget
{
    background-color: @bg-main;
}

.SearchWidget QListWidget
{
    background: transparent;
    color: rgb(210, 210, 210);
    padding: 6px 6px;
}

QToolTip
{
    background: @bg-light-1;
    color: @fg-main;
    padding: 3px;
    border: none;
}

.Title
{
    color: @fg-light-1;
}

.AbstractButton, QPushButton
{
    border: none;
    color: @fg-main;
    background: transparent;
    padding: 4px 4px;
}

.AbstractButton:hover, QPushButton:hover
{
    background-color: @bg-light-2;
}

.SettingsWidget
{
    background: @bg-main;
}

.SearchBar
{
    background-color: @bg-light-2;
    color: @fg-main;
    padding-left: 6px;
    padding-right: 6px;
    border-radius: 0px;
}

.DependenciesTree QListWidget
{
    background: transparent;
    border: none;
}
